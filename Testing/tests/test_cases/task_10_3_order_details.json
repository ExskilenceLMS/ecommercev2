{
  "id": "task10p3",
  "validation": {
    "minScore": 70,
    "static": {
      "required": true,
      "html": {
        "isMandatory": true,
        "rules": [
          {
            "file": "templates/customer/order_details.html",
            "requiredElements": ["h1", "table"]
          }
        ]
      },
      "css": {
        "isMandatory": false,
        "rules": []
      }
    },
    "dynamic": {
      "required": true,
      "requiresFlask": true,
      "flaskConfig": {
        "appPath": "Development/app.py",
        "port": 5000,
        "startupTimeout": 15000
      },
      "baseUrl": "http://localhost:5000",
      "tests": [
        {
          "isMandatory": true,
          "name": "Order details page is accessible",
          "path": "/customer/orders/1",
          "captureScreenshot": true,
          "actions": [
            {"type": "fill", "selector": "input[name='email']", "value": "customer"},
            {"type": "fill", "selector": "input[name='password']", "value": "customer123"},
            {"type": "click", "selector": "button[type='submit']"},
            {"type": "wait", "duration": 2000},
            {"type": "goto", "path": "/customer/orders/1"}
          ],
          "assertions": [
            {"type": "visible", "selector": "h1"}
          ]
        }
      ]
    },
    "pytest": {
      "required": true,
      "requiresFlask": false,
      "timeout": 30000
    }
  }
}

