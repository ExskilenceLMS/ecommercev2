{
  "id": "task4p1",
  "validation": {
    "minScore": 70,
    "static": {
      "required": true,
      "html": {
        "isMandatory": true,
        "rules": [
          {
            "file": "templates/auth/login.html",
            "requiredElements": ["form", "input", "button"]
          },
          {
            "file": "templates/auth/register.html",
            "requiredElements": ["form", "input"]
          }
        ]
      },
      "css": {
        "isMandatory": true,
        "rules": [
          {
            "file": "static/css/style.css",
            "requiredSelectors": [".auth-container", ".auth-box", ".btn-primary"]
          }
        ]
      }
    },
    "dynamic": {
      "required": true,
      "requiresFlask": true,
      "flaskConfig": {
        "appPath": "Development/app.py",
        "port": 5000,
        "startupTimeout": 15000
      },
      "baseUrl": "http://localhost:5000",
      "tests": [
        {
          "isMandatory": true,
          "name": "Login page loads correctly",
          "path": "/auth/login",
          "captureScreenshot": true,
          "actions": [],
          "assertions": [
            {"type": "visible", "selector": "form"},
            {"type": "exists", "selector": "input[name='email']"},
            {"type": "exists", "selector": "input[name='password']"},
            {"type": "exists", "selector": "button[type='submit']"}
          ]
        },
        {
          "isMandatory": true,
          "name": "Register page loads correctly",
          "path": "/auth/register",
          "captureScreenshot": true,
          "actions": [],
          "assertions": [
            {"type": "visible", "selector": "form"},
            {"type": "exists", "selector": "input[name='email']"},
            {"type": "exists", "selector": "input[name='password']"},
            {"type": "exists", "selector": "input[name='confirm_password']"},
            {"type": "exists", "selector": "input[name='first_name']"},
            {"type": "exists", "selector": "input[name='last_name']"}
          ]
        },
        {
          "isMandatory": true,
          "name": "Login form structure",
          "path": "/auth/login",
          "captureScreenshot": true,
          "actions": [],
          "assertions": [
            {"type": "exists", "selector": "form[method='POST']"},
            {"type": "exists", "selector": "label[for='email']"},
            {"type": "exists", "selector": "label[for='password']"}
          ]
        },
        {
          "isMandatory": true,
          "name": "Register form structure",
          "path": "/auth/register",
          "captureScreenshot": true,
          "actions": [],
          "assertions": [
            {"type": "exists", "selector": "form[method='POST']"},
            {"type": "exists", "selector": "label[for='email']"},
            {"type": "exists", "selector": "label[for='password']"},
            {"type": "exists", "selector": "label[for='confirm_password']"}
          ]
        }
      ]
    },
    "pytest": {
      "required": true,
      "requiresFlask": false,
      "timeout": 30000
    }
  }
}
